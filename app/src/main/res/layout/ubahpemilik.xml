<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BEBEBE"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="#304FFE"
        android:text="AutoMech Workshop"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColorLink="@color/colorPrimary"
        android:textCursorDrawable="?attr/actionModeSplitBackground"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/header2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorPrimary"
        android:text="Satu Perhentian untuk Semua Perbaikan Motor Anda"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColorLink="@color/colorPrimary"
        android:textCursorDrawable="?attr/actionModeSplitBackground"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ubahdatapemilik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Ubah Data Pemilik"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColorLink="@color/colorPrimary"
        android:textCursorDrawable="?attr/actionModeSplitBackground"
        android:textSize="24sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/noid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="No. Identitas"
                android:textColor="#000000"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimary"
                android:textCursorDrawable="?attr/actionModeSplitBackground"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/id_pemilik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:editable="false"
                android:ems="10"
                android:enabled="false"
                android:hint="No. Identitas"
                android:inputType="none"
                android:textColor="#000000"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimary"
                android:textCursorDrawable="?attr/actionModeSplitBackground"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tipeidentitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="Tipe Identitas"
                android:textColor="#000000"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimary"
                android:textCursorDrawable="?attr/actionModeSplitBackground"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/tipe_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ktp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary"
                    android:text="KTP"
                    android:textColor="#000000"
                    android:textColorHighlight="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimary"
                    android:textCursorDrawable="?attr/actionModeSplitBackground"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/sim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary"
                    android:text="SIM"
                    android:textColor="#000000"
                    android:textColorHighlight="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimary"
                    android:textCursorDrawable="?attr/actionModeSplitBackground"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/stnk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary"
                    android:text="STNK"
                    android:textColor="#000000"
                    android:textColorHighlight="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimary"
                    android:textCursorDrawable="?attr/actionModeSplitBackground"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/lainnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Lainnya"
                    android:textColor="#000000"
                    android:textColorHighlight="@color/colorPrimaryDark"
                    android:textColorLink="@color/colorPrimary"
                    android:textCursorDrawable="?attr/actionModeSplitBackground"
                    android:textSize="18sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/isi1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="Nama"
                android:textColor="#000000"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimary"
                android:textCursorDrawable="?attr/actionModeSplitBackground"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/spesialisasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:ems="10"
                android:hint="Nama"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimary"
                android:textCursorDrawable="?attr/actionModeSplitBackground"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/isi2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="Alamat"
                android:textColor="#000000"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimary"
                android:textCursorDrawable="?attr/actionModeSplitBackground"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:ems="10"
                android:hint="Alamat"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimary"
                android:textCursorDrawable="?attr/actionModeSplitBackground"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/isi3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:text="No. Telepon"
                android:textColor="#000000"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimary"
                android:textCursorDrawable="?attr/actionModeSplitBackground"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/no_telepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:ems="10"
                android:hint="No. Telepon"
                android:inputType="phone"
                android:textColor="#000000"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimary"
                android:textCursorDrawable="?attr/actionModeSplitBackground"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/simpanpemilik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/simpan" />

            <ImageButton
                android:id="@+id/hapuspemilik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/hapus" />

            <ImageButton
                android:id="@+id/batal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/batal" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>